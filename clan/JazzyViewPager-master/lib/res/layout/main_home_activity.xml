<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="clan.main.HomeActivity" >

    <Button
        android:id="@+id/main_home_sos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_home_map"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="89dp"
        android:text="Women Emergency (SOS)" />

    <Button
        android:id="@+id/main_home_chatHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_home_chatTest"
        android:layout_alignParentTop="true"
        android:text="Chat Head" />

    <Button
        android:id="@+id/main_home_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_home_sos"
        android:layout_alignLeft="@+id/main_home_chatTest"
        android:layout_marginBottom="63dp"
        android:text="Map Integration" />

    <Button
        android:id="@+id/main_home_chatTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_home_map"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="54dp"
        android:layout_marginLeft="40dp"
        android:text="Chat Test" />

</RelativeLayout>
